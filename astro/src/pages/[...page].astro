---
import BaseLayout from "../layouts/BaseLayout.astro";
import SiteSidebar from "../components/SiteSidebar.astro";
import SiteNavbar from "../components/SiteNavbar.astro";
import { ui, name, tagline } from "../data/site";
import AboutTab from "../components/tabs/AboutTab.astro";
import WorkTab from "../components/tabs/WorkTab.astro";
import PortfolioTab from "../components/tabs/PortfolioTab.astro";
import ContactTab from "../components/tabs/ContactTab.astro";
import { aboutParagraphs, services } from "../data/about";
import { testimonials } from "../data/testimonials";
import { clients } from "../data/clients";
import { roles } from "../data/experience";
import { filters } from "../data/portfolioFilters";
import { projects } from "../data/projects";
export function getStaticPaths() {
  const pages = ["about", "work", "portfolio", "contact"];
  return pages.map((p) => ({ params: { page: p } }));
}
const current = (Astro.params.page as string) || "about";
const pageMeta = {
  about: {
    title: `${name} - About`,
    description: `${tagline}. Learn more about ${name}, services, and background.`,
    canonicalPath: "/about",
  },
  work: {
    title: `${name} - Work`,
    description: `Experience and roles held by ${name}.`,
    canonicalPath: "/work",
  },
  portfolio: {
    title: `${name} - Portfolio`,
    description: `Selected projects and case studies by ${name}.`,
    canonicalPath: "/portfolio",
  },
  contact: {
    title: `${name} - Contact`,
    description: `Get in touch with ${name}.`,
    canonicalPath: "/contact",
  },
} as const;
const meta = pageMeta[current as keyof typeof pageMeta] || pageMeta.about;
---

<BaseLayout
  title={meta.title}
  description={meta.description}
  canonicalPath={meta.canonicalPath}
>
  <main>
    <SiteSidebar />

    <div class="main-content">
      <SiteNavbar />

      <article
        class={"about" + (current === "about" ? " active" : "")}
        data-page="about"
      >
        <AboutTab />
      </article>

      <article
        class={"work" + (current === "work" ? " active" : "")}
        data-page="work"
      >
        <WorkTab />
      </article>

      <article
        class={"portfolio" + (current === "portfolio" ? " active" : "")}
        data-page="portfolio"
      >
        <PortfolioTab />
      </article>

      <article
        class={"contact" + (current === "contact" ? " active" : "")}
        data-page="contact"
      >
        <ContactTab />
      </article>
    </div>
  </main>
</BaseLayout>
