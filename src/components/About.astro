<section id="about" class="section-container bg-gray-50 dark:bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        About <span class="gradient-text">Me</span>
      </h2>
      <div
        class="w-24 h-1 bg-gradient-to-r from-primary-500 to-accent-500 mx-auto rounded-full"
      >
      </div>
    </div>

    <!-- Professional Summary -->
    <div class="glass-card p-8 md:p-12 mb-16">
      <p
        class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed text-center max-w-4xl mx-auto"
      >
        Passionate Mobile and Backend Developer with expertise in building
        cross-platform mobile applications and robust server-side systems. I
        specialize in creating seamless user experiences with Flutter, Swift,
        and Kotlin, while architecting scalable backend solutions using Node.js,
        Python, and modern cloud technologies.
      </p>
    </div>

    <!-- Skills Section -->
    <div class="mb-16">
      <h3 class="text-3xl font-bold text-center mb-12">
        Technical <span class="gradient-text">Skills</span>
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Mobile Development -->
        <div class="glass-card-hover p-8">
          <div
            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold mb-4">Mobile Development</h4>
          <div class="space-y-2">
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-primary-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300">Flutter</span>
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-primary-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >Kotlin (Android)</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-primary-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300">Swift (iOS)</span>
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-primary-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300">Mobile UI/UX</span>
            </div>
          </div>
        </div>

        <!-- Backend Development -->
        <div class="glass-card-hover p-8">
          <div
            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-accent-400 to-accent-600 flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
              ></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold mb-4">Backend Development</h4>
          <div class="space-y-2">
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-accent-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >Node.js & Express</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-accent-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >Python & Django</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-accent-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >REST & GraphQL APIs</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-accent-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300">Microservices</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-accent-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300">WebSockets</span>
            </div>
          </div>
        </div>

        <!-- DevOps & Tools -->
        <div class="glass-card-hover p-8">
          <div
            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center mb-6"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold mb-4">DevOps & Database</h4>
          <div class="space-y-2">
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >Docker & Kubernetes</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >MongoDB & PostgreSQL</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >Redis & Firebase</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >AWS, GCP, Azure</span
              >
            </div>
            <div class="flex items-center">
              <span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span>
              <span class="text-gray-700 dark:text-gray-300"
                >CI/CD Pipelines</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>

