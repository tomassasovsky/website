---
import MainShell from "../components/MainShell.astro";
import { name, tagline } from "../data/site";
import { navItems } from "../data/nav";

const meta = {
  title: `${name} - About`,
  description: `Hi, I'm ${name} and I'm a ${tagline}. Here you can learn more about me, my work, and my projects.`,
  canonicalPath: "/",
};
---

{
  (() => {
    const firstEnabled = navItems.find((n) => n.enabled !== false);
    const current = firstEnabled
      ? firstEnabled.href === "/"
        ? "about"
        : firstEnabled.href.replace("/", "")
      : "about";
    return <MainShell meta={meta} current={current} />;
  })()
}
