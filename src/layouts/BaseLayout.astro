---
import PageInteractions from "../components/PageInteractions.astro";
import { name, tagline, avatar, socials, email as contactEmail } from "../data/site";

const {
  title = name,
  description = tagline,
  image = avatar,
  noindex = false,
  canonicalPath = undefined,
} = Astro.props;

const siteOrigin = (Astro.site && Astro.site.toString && Astro.site.toString()) ||
  (Astro.url && Astro.url.origin) || "";
const canonicalUrl = canonicalPath
  ? (siteOrigin ? new URL(canonicalPath, siteOrigin).toString() : canonicalPath)
  : (Astro.url ? Astro.url.href : "");
const ogImageUrl = image ? (siteOrigin ? new URL(image, siteOrigin).toString() : image) : "";
const socialUrls = Array.isArray(socials) ? socials.map((s) => s && s.href).filter(Boolean) : [];
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name,
  jobTitle: tagline,
  url: siteOrigin || undefined,
  image: ogImageUrl || undefined,
  email: contactEmail ? `mailto:${contactEmail}` : undefined,
  sameAs: socialUrls,
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- color scheme hint -->
    <meta name="color-scheme" content="light dark" />

    <!-- Early theme bootstrap to avoid FOUC -->
    <script>
      (function () {
        try {
          var storageKey = "theme";
          var stored = localStorage.getItem(storageKey);
          var prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
          var theme = stored || (prefersDark ? "dark" : "light");
          document.documentElement.setAttribute("data-theme", theme);
          // Ensure built-in form controls adapt
          document.documentElement.style.colorScheme = theme;
        } catch (e) {
          // fallback: respect prefers-color-scheme
          if (window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches) {
            document.documentElement.setAttribute("data-theme", "dark");
            document.documentElement.style.colorScheme = "dark";
          }
        }
      })();
    </script>

    <!-- favicon -->
    <link rel="icon" href="/assets/images/me-photo.png" type="image/png" />
    <link rel="alternate icon" href="/assets/images/me-photo.png" type="image/png" />

    <!-- google font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- global css -->
    <link rel="stylesheet" href="/assets/css/style.css" />

    <!-- SEO basics -->
    {description && <meta name="description" content={description} />}
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={name} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    {ogImageUrl && <meta property="og:image:alt" content={`${name} â€” ${tagline}`} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}    

    <!-- JSON-LD Person -->
    <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
  </head>
  <body data-site-name={name}>
    <slot />

    <div class="modal-container" data-modal-container>
      <div class="overlay" data-overlay></div>
      <section class="testimonials-modal">
        <button class="modal-close-btn" data-modal-close-btn>
          <ion-icon name="close-outline"></ion-icon>
        </button>
        <div class="modal-content">
          <h4 class="h3 modal-title" data-modal-title></h4>
          <time datetime=""></time>
          <div class="modal-text" data-modal-text>
            <p></p>
          </div>
        </div>
      </section>
    </div>

    <PageInteractions />

    <!-- ionicon link -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>
